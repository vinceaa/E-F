page {
    background: #f5f5f5;
}

.box {
    padding: 30rpx 30rpx;
    background: #f5f5f5;
}

.introduction {
    height: 280rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
}

.introduction-title {
    height: 84rpx;
    position: relative;
}

.title-text0 {
    font-size: 38rpx;
    line-height: 84rpx;
}

.introduction-img {
    height: 196rpx;
}

.introduction-imageUl {
    display: flex;
    flex-direction: row;
}

.introduction-imageLi {
    flex: 1;
}

.introduction-title image {
    width: 50rpx;
    height: 50rpx;
}

.introduction-image-img {
    width: 196rpx;
    height: 196rpx;
}

.clearfix:after {
    content: "";
    display: block;
    clear: both;
}

ul {
    list-style: none;
}

li {
    border-radius: 10rpx;
}

.title-img1 {
    position: absolute;
    right: 140rpx;
}

.title-img2 {
    position: absolute;
    right: 40rpx;
}

.title-text {
    font-size: 15rpx;
}

.title-text1 {
    position: absolute;
    top: 60%;
    right: 140rpx;
}

.title-text2 {
    position: absolute;
    top: 60%;
    right: 40rpx;
}

.video {
    background: #f5f5f5;
    border-radius: 10rpx;
    position: relative;
}

/*---短视频----------*/

.review {
    background: #f5f5f5;
    border-radius: 10rpx;
}

.video-title {
    margin: 10rpx 0;
}

